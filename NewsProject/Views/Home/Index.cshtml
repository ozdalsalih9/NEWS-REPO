@model List<NewsProject.Models.News>

@{
    ViewData["Title"] = "Ana Sayfa";
    var sliders = ViewBag.Sliders as List<NewsProject.Models.Slider>;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    /* Özel Slider Stilleri */
    .hero-slider {
        margin-top: 20px;
        margin-bottom: 40px;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        position: relative;
    }

        .hero-slider .carousel-item {
            height: 70vh;
            min-height: 500px;
            position: relative;
        }

        .hero-slider img {
            object-fit: cover;
            width: 100%;
            height: 100%;
            filter: brightness(0.8);
            transition: transform 0.5s ease;
        }

        .hero-slider .carousel-item:hover img {
            transform: scale(1.03);
        }

        .hero-slider .carousel-caption {
            bottom: 25%;
            left: 10%;
            right: 10%;
            text-align: left;
            background: none;
            padding: 30px;
            border-radius: 15px;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            transform: translateY(20px);
            opacity: 0;
            transition: all 0.5s ease;
        }

        .hero-slider .carousel-item.active .carousel-caption {
            transform: translateY(0);
            opacity: 1;
        }

        .hero-slider .carousel-caption h3 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            color: #fff;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        }

        .hero-slider .carousel-caption p {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 20px;
        }

        .hero-slider .carousel-indicators {
            bottom: 50px;
        }

            .hero-slider .carousel-indicators button {
                width: 12px;
                height: 12px;
                border-radius: 50%;
                margin: 0 8px;
                border: 2px solid #fff;
                background: transparent;
            }

                .hero-slider .carousel-indicators button.active {
                    background: #fff;
                }

        .hero-slider .carousel-control-prev,
        .hero-slider .carousel-control-next {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            top: 50%;
            transform: translateY(-50%);
            backdrop-filter: blur(5px);
            opacity: 0;
            transition: all 0.3s ease;
        }

        .hero-slider:hover .carousel-control-prev,
        .hero-slider:hover .carousel-control-next {
            opacity: 1;
        }

        .hero-slider .carousel-control-prev {
            left: 30px;
        }

        .hero-slider .carousel-control-next {
            right: 30px;
        }

    /* Haber Kartları */
    .news-card {
        transition: all 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 25px;
    }

        .news-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .news-card img {
            height: 220px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .news-card:hover img {
            transform: scale(1.05);
        }

        .news-card .card-body {
            padding: 20px;
        }

        .news-card .card-title a {
            color: #333;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .news-card:hover .card-title a {
            color: #0d6efd;
        }

        .news-card .card-text {
            color: #666;
            margin-bottom: 15px;
        }

        .news-card .card-footer {
            background: rgba(0, 0, 0, 0.03);
            border-top: none;
            padding: 15px 20px;
        }

    /* Responsive Ayarlar */
    @@media (max-width: 768px) {
        .hero-slider .carousel-item {
            height: 50vh;
            min-height: 400px;
        }

        .hero-slider .carousel-caption {
            bottom: 15%;
            left: 5%;
            right: 5%;
            padding: 20px;
        }

            .hero-slider .carousel-caption h3 {
                font-size: 1.8rem;
            }

            .hero-slider .carousel-caption p {
                font-size: 1rem;
            }
    }
</style>

<!-- SLIDER -->
@if (sliders != null && sliders.Any())
{
    <div class="container-fluid px-0">
        <div id="newsSlider" class="carousel slide hero-slider animate__animated animate__fadeIn" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @for (int i = 0; i < sliders.Count; i++)
                {
                    <button type="button" data-bs-target="#newsSlider" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
                }
            </div>

            <div class="carousel-inner">
                @for (int i = 0; i < sliders.Count; i++)
                {
                    var slide = sliders[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <a href="@slide.Link" target="_blank">
                            <img src="@Url.Content("~/img/Sliders/" + slide.Image)" class="d-block w-100" alt="@slide.Title">
                            <div class="carousel-caption animate__animated animate__fadeInUp">
                                <h3>@slide.Title</h3>
                                <p>@slide.Description</p>
                                <button class="btn btn-outline-light btn-lg mt-2">Detayları Gör</button>
                            </div>
                        </a>
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#newsSlider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Önceki</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#newsSlider" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Sonraki</span>
            </button>
        </div>
    </div>
}

<!-- HABER KARTLARI -->
<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Son Haberler</h2>
    <div class="row">
        @foreach (var news in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="news-card">
                    @if (!string.IsNullOrEmpty(news.Image))
                    {
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@news.Id">
                            <img src="~/img/News/@news.Image" class="card-img-top" alt="News Image">
                        </a>
                    }

                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@news.Id">
                                @news.Header
                            </a>
                        </h5>
                        <p class="card-text">@news.Content.Substring(0, Math.Min(200, news.Content.Length))...</p>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <small class="text-muted"><i class="fas fa-user me-1"></i> @news.Author.Name</small>
                        <small class="text-muted"><i class="fas fa-calendar-alt me-1"></i> @news.PublishDate.ToString("dd MMM yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Slider otomatik geçiş hızı
    document.addEventListener('DOMContentLoaded', function() {
        var myCarousel = document.querySelector('#newsSlider');
        var carousel = new bootstrap.Carousel(myCarousel, {
            interval: 2500, // 5 saniyede bir geçiş
            pause: 'hover'
        });
    });
</script>