@{
    ViewData["Title"] = "Logout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container text-center my-5">
        <h1>Çıkış Yapıldı!</h1>
        <p class="lead">Başarıyla çıkış yaptınız. Ana sayfaya yönlendiriliyorsunuz...</p>

        <!-- Yönlendirme yapılmadan önce birkaç saniye gösterim yapabiliriz -->
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>

        <p>Yönlendiriliyorsunuz...</p>
    </div>

    <script>
        // Sayfa yüklendikten 2 saniye sonra Home/Index sayfasına yönlendirme
        setTimeout(function() {
            window.location.href = '/Home/Index';
        }, 2000);
    </script>
</body>
</html>
