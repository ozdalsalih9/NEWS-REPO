                    <a href="#">Kullanım Şartları</a>
                </div>
                <div class="col-lg-4 mb-4">
                    <h5>İletişim</h5>
                    <p><i class="fas fa-map-marker-alt me-2"></i> 1234 Haber Caddesi, İstanbul</p>
                    <p><i class="fas fa-phone me-2"></i> (0212) 123 45 67</p>
                    <p><i class="fas fa-envelope me-2"></i> info@haberportali.com</p>
                </div>
            </div>
            <div class="copyright">
                <p>&copy; @DateTime.Now.Year Haber Portalı - Tüm hakları saklıdır.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Sayfa yükleme animasyonu
        document.addEventListener('DOMContentLoaded', function() {
            const loadingOverlay = document.getElementById('loadingOverlay');

            // Sayfa yüklenirken göster
            loadingOverlay.classList.add('active');

            // Sayfa tamamen yüklendiğinde gizle
            window.addEventListener('load', function() {
                setTimeout(function() {
                    loadingOverlay.classList.remove('active');
                }, 500);
            });

            // Tüm linkler için yükleme animasyonu
            document.querySelectorAll('a:not([href^="#"]):not([target="_blank"])').forEach(link => {
                link.addEventListener('click', function(e) {
                    if (this.href && this.href !== '#' && !this.classList.contains('no-loading')) {
                        e.preventDefault();
                        loadingOverlay.classList.add('active');

                        // Yönlendirme için küçük bir gecikme
                        setTimeout(() => {
                            window.location.href = this.href;
                        }, 300);
                    }
                });
            });

            // Logout linki için özel işlem
            document.querySelectorAll('.logout-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    loadingOverlay.classList.add('active');

                    // Logout işlemi için ekstra bekleme süresi
                    setTimeout(() => {
                        window.location.href = link.href;
                    }, 800);
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>