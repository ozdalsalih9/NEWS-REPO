@model NewsProject.Models.Slider

@{
    ViewData["Title"] = "Edit Slider";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Edit Slider</h2>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Image</label>
                <input type="file" name="Image" class="form-control" accept="image/*" />
                @if (!string.IsNullOrWhiteSpace(Model.Image))
                {
                    <div class="mt-2">
                        <img src="/img/Sliders/@Model.Image" height="75" />
                        <div class="form-check mt-1">
                            <label class="form-check-label">
                                @Html.CheckBox("cbResmiSil") Remove Image
                            </label>
                        </div>
                    </div>
                }
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Link" class="form-label"></label>
                <input asp-for="Link" class="form-control" type="url" required />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
