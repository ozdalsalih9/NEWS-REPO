@model NewsProject.Models.Author

@{
    ViewData["Title"] = "Edit Author";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Yazar Id Alanı -->
            <input type="hidden" asp-for="Id" />

            <!-- Yazar Adı Alanı -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Yazar Adı</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Yazar Biyografi Alanı -->
            <div class="form-group mb-3">
                <label asp-for="Bio" class="control-label">Biyografi</label>
                <textarea asp-for="Bio" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <!-- Submit Butonu -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
